<% if !session[:user_id] %>
<section class="clearfix">
  <article class="full_column">

      <% if flash[:register_notice] %>
        <%= flash[:register_notice] %>
      <% end %>

    <a href="/register/">Register</a><br>
      <form action="/login/" method="post">
        <label for="username">Username:</label><br>
        <input name="username" id="username" type="text"><br>
        <label for="password">Password:</label><br>
        <input name="password" id="password" type="password"><br>
        <button type="submit">Log In</button>
      </form>
  </article>
</section>

<% else %>

<section class="clearfix">
  <article class="one_half">
    <h1>Welcome, <%= username %>!</h1>
  </article>
</section>

<section class="clearfix">
  <article class="one_half">
    <h2>Your Fish:</h2>
    <ul>
      <% @fish_arr.each do |hsh| %>
        <li><a href="<%= hsh["wiki"] %>"><%= hsh["name"] %></a></li>
      <% end %>
    </ul><br>
  </article>
  <article class="one_half">
    <h2>Add Fish:</h2>
    <form action="/fish/" method="post">
      <label for="fishname">Fish Name:</label><br>
      <input name="name" id="fishname" type="text"><br>
      <label for="wiki_url">Fish Wiki URL:</label><br>
      <input name="wiki" id="wiki_url" type="text"><br>
      <button type="submit">Add Fish</button>
    </form>
  </article>
</section>
<section class="clearfix">
  <article class="full_column">
    <hr>
  </article>
</section>
<section class="clearfix">
  <article class="one_half">
    <h2>Users:</h2>
    <form action="/" method="get">
      <select name="sort">
        <option value="asc">Choose...</option>
        <option value="asc">Ascending</option>
        <option value="desc">Descending</option>
      </select>
      <button type="submit">Sort</button>
    </form>
    <ul>
      <% @user_arr.each do |str| %>
        <li><%= str %></li>
      <% end %>
    </ul>
  </article>
  <article class="one_half">
    <h2>Delete Users:</h2>
    <form action="/delete/" method="post">
      <label for="delete">Enter username to delete</label><br>
      <input name="delete" id="delete" type="text"><br>
      <button type="submit">Delete</button>
    </form>
  </article>
</section>

<section class="clearfix">
  <article id="right_float" class="full_column">
    <a href="/logout/">Logout</a><br>
  </article>
</section>


<% end %>